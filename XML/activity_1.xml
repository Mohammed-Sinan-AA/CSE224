<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:orientation="vertical"
    tools:context=".MenuBar">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:background="?attr/colorPrimary"
        android:contextClickable="false"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="2"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp">
        <ImageButton
            android:padding="10dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_gravity="left"
            android:scaleType="fitCenter"
            android:id="@+id/imBtn1"
            android:src="@drawable/img_34"/>
        <ImageButton
            android:padding="10dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_gravity="right"
            android:scaleType="fitCenter"
            android:id="@+id/imBtn2"
            android:src="@drawable/img_37"/>
        <ImageButton
            android:padding="10dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_gravity="left"
            android:scaleType="fitCenter"
            android:id="@+id/imBtn3"
            android:src="@drawable/img_32"/>
        <ImageButton
            android:padding="10dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_gravity="right"
            android:scaleType="fitCenter"
            android:id="@+id/imBtn4"
            android:src="@drawable/img_33"/>
        <ImageButton
            android:padding="10dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_gravity="left"
            android:scaleType="fitCenter"
            android:id="@+id/imBtn5"
            android:src="@drawable/img_35"/>
        <ImageButton
            android:padding="10dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_gravity="right"
            android:scaleType="fitCenter"
            android:id="@+id/imBtn6"
            android:src="@drawable/img_36"/>
    </GridLayout>
    <Button
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Exit" />
</LinearLayout>